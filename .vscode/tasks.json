{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate .env",
            "type": "shell",
            "command": "printf '%s\\n%s\\n' \"${input:GUILD_ID}\" \"${input:DISCORD_TOKEN}\" | ./gen-env.sh > .env",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "GUILD_ID",
            "type": "promptString",
            "description": "Guild (aka server) ID"
        },
        {
            "id": "DISCORD_TOKEN",
            "type": "promptString",
            "description": "Discord Bot Token"
        }
    ]
}